@model foodcorner.Models.RegisterViewModel

@{
    ViewBag.Title = "Register";
}

<html>
<head>
    <meta charset="utf-8">
    <title>Register </title>
    <!-- Mobile Specific Metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <!-- Font-->
    <link rel="stylesheet" type="text/css" href="~/Content/csslr/nunito-font.css">
    <!-- Main Style Css -->
    <link rel="stylesheet" href="~/Content/csslr/style.css" />
</head>
<body class="form-v6">
    <div class="page-content">
        <div class="form-v6-content">
            <div class="form-left">
                <img src="~/Content/imageslr/form-v6.jpg" alt="form">
            </div>
            <form class="form-detail" action="#" method="post">
                <h2>Register Form</h2>
                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                <div class="form-row">
                    @Html.TextBoxFor(model => model.roles, new { @class = "form-control", @placeholder = "Enter Role: Customer,Supplier, chef, delivery" })

                </div>
                <br/>
                    <div class="form-row">
                        @Html.TextBoxFor(model => model.FName, new { @class = "form-control", @placeholder = "First Name" })

                    </div>
                    <br />
                    <div class="form-row">
                        @Html.TextBoxFor(model => model.LName, new { @class = "form-control", @placeholder = "Last Name" })

                    </div>
                    <br />
                    <div class="form-row">
                        @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @placeholder = "Email" })

                    </div>
                    <br />
                    <div class="form-row">
                        @Html.TextBoxFor(model => model.Number, new { @class = "form-control", @placeholder = "Phone Number" })

                    </div>
                    <br />
                    <div class="form-row">
                        @Html.TextBoxFor(model => model.address, new { @class = "form-control", @placeholder = "Address" })

                    </div>
                    <br />
                    <div class="form-row">
                        @Html.PasswordFor(model => model.Password, new { @class = "form-control", @placeholder = "Password" })

                    </div>
                    <br />
                    <div class="form-row">
                        @Html.PasswordFor(model => model.ConfirmPassword, new { @class = "form-control", @placeholder = "Confirm Password" })

                    </div>

                    <div class="form-row-last">
                        <input type="submit" name="register" class="register" value="Register">
                    </div>
                }
            </form>
        </div>
    </div>
</body>
</html>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
