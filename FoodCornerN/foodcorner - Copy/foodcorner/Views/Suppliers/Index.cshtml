@model IEnumerable<foodcorner.Models.SupplierCategory>

@{
    ViewBag.Title = "View Supplier";
}



<h2>VIEW SUPPLIER MENU</h2>

<h1 style="margin-top:50px;font-family:Arial;font-size:35px; margin-bottom:50px;padding-top:45px; text-align:center;color:cornflowerblue"><b>Supplier Menu</b></h1>

<table class="table table-bordered table-condensed">
    <tr>

        <td style="font-family:Arial;font-size:24px">Category Name</td>
        <td style="font-family:Arial;font-size:24px">Manage</td>
    </tr>


    @foreach (var item in Model)
    {
        <tr>
            <td style="font-family:Arial;font-size:20px">
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>

                @Html.ActionLink("View Items", "ViewItems", new { id = item.CatId }) |


            </td>
        </tr>
    }

</table>


<div>
    @Html.ActionLink("Back to List", "Index")
</div>
