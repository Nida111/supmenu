@model IEnumerable<foodcorner.Models.Chef>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<h1 style="margin-top:50px;font-family:Arial;font-size:35px; margin-bottom:50px;padding-top:45px; text-align:center;color:cornflowerblue"><b>Chefs</b></h1>
<table class="table table-bordered table-condensed">
    <tr>

        <td style="font-family:Arial;font-size:24px">Chef Name</td>
        <td style="font-family:Arial;font-size:24px">Chef State</td>
        <td style="font-family:Arial;font-size:24px">Manage</td>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State)
            </td>
            <td>
              
                @Html.ActionLink("Delete", "Delete", new { id = item.ChefId })
            </td>
        </tr>
    }

</table>
